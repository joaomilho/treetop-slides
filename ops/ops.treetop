grammar Ops
  rule paren_opn
    '(' opn ')' { def val; opn.val end }
  end
  rule opn
    opd opt opd { def val; eval("#{opd1.val} #{opt.text_value} #{opd2.val}").to_i end }
  end
  rule opd
    n / paren_opn
  end
  rule opt
    '+' / '-' / '*' / '/'
  end
  rule n
    [0-9]+ { def val; text_value.to_i end }
  end
end